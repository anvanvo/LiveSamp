<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/tvChannelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Channel name"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/etChannelName"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etChannelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:hint="Channel name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChannelName" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etUid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:hint="UID"
        app:layout_constraintEnd_toEndOf="@+id/etChannelName"
        app:layout_constraintStart_toStartOf="@+id/etChannelName"
        app:layout_constraintTop_toBottomOf="@+id/etChannelName" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:hint="Token"
        android:text="007eJxTYLBYrTOd4+a3eNE0nX0LoqefTNQwvhC1xtHDp+vSdHnTtUsUGFItDM2SzI1NzI0STU3MDYwTjQ2TjI0TU01NLExSkw2SpuTcSW4IZGQ4xZPBwAiFID4TQ2IeAwMAog8dJQ=="
        app:layout_constraintEnd_toEndOf="@+id/etChannelName"
        app:layout_constraintStart_toStartOf="@+id/etChannelName"
        app:layout_constraintTop_toBottomOf="@+id/etUid" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/scAudience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audience Role "
        app:layout_constraintStart_toStartOf="@+id/etToken"
        app:layout_constraintTop_toBottomOf="@+id/etToken" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnJoinRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="Join"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scAudience" />
</androidx.constraintlayout.widget.ConstraintLayout>